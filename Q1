/*Take input from the user. Ask for their full name, age, college name and display it as follows
Hello <full name>, I see you are <age> years old and are currently studying at <college name>*/

#include<bits/stdc++.h>
using namespace std;

int main() {
int age;
string name, college;
cout<<"Enter your full name :"<<endl;
getline(cin,name);
cout<<"Enter your age :"<<endl;
cin>>age;
cin.ignore();
cout<<"Enter your college name :"<<endl;
getline(cin,college);

cout<<"Hello "<<name<<", I see you are "<<age<<" years old and are currently studying at "<<college<<endl;

return 0;
}
